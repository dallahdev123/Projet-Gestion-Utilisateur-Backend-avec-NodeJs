<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id" content="13574637392-s40t30l6a9o9fc3l5jf28nc7osb7gbui.apps.googleusercontent.com">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
      .mess{
        width: 450px;
        height: 35px;
        background-color: rgb(137, 174, 253);
        text-align: center;
      }
      h1{
        margin-top: 2px;
      }
      #goog{
        margin-left: 20px;
        margin-top: 15px;
      }
    </style>
</head>
<body load="onSignIn()">
  <div class="container" align = "center">
    <div class="mess"><h5>Vous allez vous connecter avec votre compte gmail</h5></div>

    <div id="goog" class="g-signin2" data-onsuccess="onSignIn"></div>
  </div>
    
    <script>
        function onSignIn(googleUser) {
          var profile = googleUser.getBasicProfile();
          console.log('ID: ' + profile.getId()); // Do not send to your backend! Use an ID token instead.
          console.log('Name: ' + profile.getName());
          console.log('Image URL: ' + profile.getImageUrl());
          console.log('Email: ' + profile.getEmail()); // This is null if the 'email' scope is not present.
          window.mail = profile.getEmail();
          window.location.href = "http://localohost:3000/loginTrait";
        }
      </script>
      <a href="#" onclick="signOut();">Sign out</a>
      <script>
        function signOut() {
          var auth2 = gapi.auth2.getAuthInstance();
          auth2.signOut().then(function () {
            console.log('User signed out.');
          });
        }
      </script>
</body>
</html>